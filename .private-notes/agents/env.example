# DRIVR - CarMania Base App Chat Agent Configuration
# Copy this file to .env and fill in your actual values

# Agent Wallet Configuration
# Generate a new wallet or use an existing one for the agent
CARMANIA_AGENT_PRIVATE_KEY=your_agent_wallet_private_key_here

# OpenSea API Configuration
# Get your API key from https://docs.opensea.io/reference/api-overview
OPENSEA_API_KEY=your_opensea_api_key_here

# Base Network Configuration
# Use mainnet for production, testnet for development
BASE_RPC_URL=https://mainnet.base.org
# BASE_RPC_URL=https://sepolia.base.org  # For testnet

# Optional: Custom RPC endpoints
# BASE_RPC_URL=https://base-mainnet.public.blastapi.io
# BASE_RPC_URL=https://base.blockpi.network/v1/rpc/public

# Agent Identity (optional - will use defaults if not set)
# CARMANIA_AGENT_NAME=CarMania Agent
# CARMANIA_AGENT_DESCRIPTION=Your AI assistant for all things CarMania

# NFT Collection Addresses
# Add your CarMania NFT collection contract addresses here
# These will be used to verify user access levels
# Example:
# CARMANIA_COLLECTION_1=0x1234567890123456789012345678901234567890
# CARMANIA_COLLECTION_2=0x0987654321098765432109876543210987654321

# Smart Contract Addresses (Base chain)
# These contracts handle car story provenance, minting, and community features
PROVENANCE_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
MINTING_CONTRACT_ADDRESS=0x0987654321098765432109876543210987654321
COMMUNITY_CONTRACT_ADDRESS=0x1122334455667788990011223344556677889900

# Logging Configuration (optional)
# LOG_LEVEL=info
# LOG_FORMAT=json
